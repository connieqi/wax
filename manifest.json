{
    "manifest_version": 2,
    
    "name": "Wax",
    "description": "The best way to catch videos and multitask.",
    "version": "1.0",

    "permissions": [
        "tabs",
        "activeTab",
        "https://www.youtube.com/*"
    ],
    "browser_action": {
        "default_icon": "/img/wax-icon-w.png",
        "default_popup": "popup.html"
    }
}
